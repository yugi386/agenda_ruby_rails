<h1>Lista dos Amigos</h1>

<table border=0>
	<tr bgcolor="#FFD700">
		<th>Nome</th>
		<th>Data</th>
		<th>Fone</th>
		<th colspan="3">Operações</th>
	</tr>

	<% cont = 0 %>
	<% @friends.each do |registro| %>

		<% if cont % 2 == 1 %>
			<tr bgcolor="#EEE9E9">
		<% else %>
			<tr bgcolor="#FFF5EE" >
		<% end %>

		<% cont = cont + 1%>	<!-- Incrementando contador para mudança de cor -->

		<td><%= registro.name %></td>
		<td><%= registro.birthday.strftime("%d/%m/%Y") %></td>
		<td><%= registro.phone %></td>

		<% info = 13.chr + 10.chr + 13.chr + 10.chr + "Nome: " + registro.name	%>

		<!-- gerenciando links para CRUD -->

		<th><%= link_to image_tag("mostrar.png", :size => "100x25") , registro, :method => :show %></th>
		<th><%= link_to image_tag("editar.png", :size => "100x25") , edit_friend_path(registro) %></th>
		<th><%= link_to image_tag("apagar.png", :size => "100x25") , registro, confirm: 'Deseja apagar este Registro?' + info, :method => :delete %></th>

		</tr>
	<% end %>

</table>

<HR SIZE=5 color="blue">
<%= link_to "Novo Registro", new_friend_path %>